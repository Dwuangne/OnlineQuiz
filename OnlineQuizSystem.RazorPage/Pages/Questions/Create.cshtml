@page "{quizId:int}"
@model OnlineQuizSystem.RazorPage.Pages.Questions.CreateModel
@{
    ViewData["Title"] = "Create Question";
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <h1 class="h3 mb-0">Create New Question</h1>
        </div>
        <div class="card-body">
            <form method="post" id="questionForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Hidden QuizId -->
                <input type="hidden" name="quizId" value="@Model.RouteData.Values["quizId"]" />

                <div class="form-group mb-3">
                    <label asp-for="QuestionRequest.QuestionText" class="form-label fw-bold">Question Text</label>
                    <input asp-for="QuestionRequest.QuestionText" class="form-control form-control-lg" placeholder="Enter your question here" required />
                    <span asp-validation-for="QuestionRequest.QuestionText" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Answer Options</label>
                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <label class="form-label">Answer A</label>
                            <input asp-for="QuestionRequest.AnswerA" class="form-control" placeholder="Enter answer A" required />
                            <span asp-validation-for="QuestionRequest.AnswerA" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-2">
                            <label class="form-label">Answer B</label>
                            <input asp-for="QuestionRequest.AnswerB" class="form-control" placeholder="Enter answer B" required />
                            <span asp-validation-for="QuestionRequest.AnswerB" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-2">
                            <label class="form-label">Answer C</label>
                            <input asp-for="QuestionRequest.AnswerC" class="form-control" placeholder="Enter answer C" required />
                            <span asp-validation-for="QuestionRequest.AnswerC" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-2">
                            <label class="form-label">Answer D</label>
                            <input asp-for="QuestionRequest.AnswerD" class="form-control" placeholder="Enter answer D" required />
                            <span asp-validation-for="QuestionRequest.AnswerD" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="QuestionRequest.AnswerCorrect" class="form-label fw-bold">Correct Answer</label>
                    <select asp-for="QuestionRequest.AnswerCorrect" class="form-select" required>
                        <option value="" disabled selected>Select correct answer</option>
                        <option value="A">A</option>
                        <option value="B">B</option>
                        <option value="C">C</option>
                        <option value="D">D</option>
                    </select>
                    <span asp-validation-for="QuestionRequest.AnswerCorrect" class="text-danger"></span>
                </div>

                <!-- Submit Buttons -->
                <div class="d-flex justify-content-end mt-4">
                    <input type="submit" value="Create Question" class="btn btn-success px-4 py-2" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Client-side validation -->
    <partial name="_ValidationScriptsPartial" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        .form-select {
            max-width: 200px;
        }
    </style>
}