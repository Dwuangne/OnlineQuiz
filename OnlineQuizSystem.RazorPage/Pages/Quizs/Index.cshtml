@page
@model OnlineQuizSystem.RazorPage.Pages.Quizs.IndexModel
@{
}

<h2>List Quiz</h2>
<a asp-page="Create" class="btn btn-primary">Create Quiz</a>
<a asp-page="/Room/Create" class="btn btn-secondary">Host Quiz</a>
<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Titile</th>
            <th>Description</th>
            <th>Create At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var quiz in Model.QuizResponses)
        {
            <tr>
                <td>@quiz.Title</td>
                <td>@quiz.Description</td>
                <td>@quiz.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <a asp-page="Detail" asp-route-id="@quiz.QuizId" class="btn btn-info btn-sm">Detail</a>
                    <a asp-page="Edit" asp-route-id="@quiz.QuizId" class="btn btn-warning btn-sm">Update</a>
                    <a asp-page="Delete" asp-route-id="@quiz.QuizId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<nav>
    <ul class="pagination">
        @for (int i = 1; i <= Model.totalPages; i++)
        {
            string active = "";
            if (i == Model.pageIndex) active = "active";

            <li class="page-item @active" aria-current="page">
                <a class="page-link" href="?pageIndex=@(i)">@i</a>
            </li>
        }

    </ul>
</nav>

<a href="/Account/Logout" class="btn btn-danger">Logout</a>